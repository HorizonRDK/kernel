/dts-v1/;
#include "hobot-xj3-xvb.dtsi"

/ {
	model = "Hobot J3 SOC MP DVB";
};

&i2c0 {
	mpq7920@69 {
		compatible = "mps,mpq7920";
		reg = <0x69>;
		regulators {
			core_pd_reg: DCDC1 {
				regulator-name = "VDD_CORE_PD";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <800000>;
				regulator-always-on;
			};

			ddr_pd_reg: DCDC2 {
				regulator-name = "VDD_DDR_PD";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <800000>;
				regulator-always-on;
			};

			vdd_core_pd_reg1: DCDC3 {
				regulator-name = "VDD_CORE_PD1";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <800000>;
				regulator-always-on;
			};

			cpu_pd_reg: DCDC4 {
				regulator-name = "VCC_CPU";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-always-on;
			};

			sys_pd1_3v3_reg: LDO3 {
				regulator-name = "VDD_3V3";
				regulator-min-microvolt = <3300000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
			};

			sys_pd_1v8_reg: LDO4 {
				regulator-name = "VDD_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-always-on;
			};

			core_ao_reg: LDO5 {
				regulator-name = "VDD_CORE_AO";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <800000>;
				regulator-always-on;
			};
		};
	};

	pf5024@08 {
		compatible = "nxp,pf5024";
		reg = <0x8>;
		regulators {
			sys_ao_1v8: DCDC1 {
				regulator-name = "SYS_AO_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-always-on;
			};

			ddr_ao_1v1: DCDC2 {
				regulator-name = "DDR_AO_1V1";
				regulator-min-microvolt = <1100000>;
				regulator-max-microvolt = <1100000>;
				regulator-always-on;
			};

			cnn1_pd_reg: DCDC3 {
				regulator-name = "VCC_CNN1";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <3000>;
			};

			cnn0_pd_reg: DCDC4 {
				regulator-name = "VCC_CNN0";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <3000>;
			};

		};
	};

};

&cpu0 {
	cpu-supply = <&cpu_pd_reg>;
};

&cpu1 {
	cpu-supply = <&cpu_pd_reg>;
};

&cpu2 {
	cpu-supply = <&cpu_pd_reg>;
};

&cpu3 {
	cpu-supply = <&cpu_pd_reg>;
};

&cnn0 {
	cnn-supply = <&cnn0_pd_reg>;
};

&cnn1 {
	cnn-supply = <&cnn1_pd_reg>;
};

&sdio1 {
	powerup-gpio = <1>;	/* j3-dvb EN_VDD_CNN0/GPIO0[1] */
	powerup-logic = <1>;
};

&sdio2 {
	powerup-gpio = <4>;	/* j3-dvb JTG_TRSTN/GPIO0[4] */
};

&mipi_host0 {
	pinctrl-0 = <&sensor0_func>;
	pinctrl-1 = <&sensor0_gpio_func>;
	snrclk-idx = <0>;
};

&mipi_host1 {
	pinctrl-0 = <&sensor1_func>;
	pinctrl-1 = <&sensor1_gpio_func>;
	snrclk-idx = <1>;
};
